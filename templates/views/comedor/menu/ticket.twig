{% extends 'templates/app.twig' %}

{% block content %}
<div class="col-lg-12">
	<h2>Comprar Ticket para el Menu:</h2>
				<div class="panel-body">
					<form action="{{ path_for('comedor.menu.ticket.new',{'idMenu':old.idMenu}) }}" method="post" autocomplete="off">
						<div class="form-group">
							<label for="fecha">Fecha</label>
							<input type="date" name="fecha" id="fecha" class="form-control" value="{{ old.fecha }}" readonly>
						</div>

						<div class="form-group">
							<label for="precio">Precio</label>
							<input type="number" name="precio" id="precio" class="form-control" value="{{ old.precio }}" readonly
							placeholder="0.00">
						</div>

						<div class="form-group">
							<label for="saldo">Saldo</label>
							<input type="number" name="saldo" id="saldo" class="form-control" value="{{ auth.user.saldo }}" readonly
							placeholder="0.00">
						</div>

						<button type="submit" class="btn btn-2">Comprar</button>
						<a class="btn btn-2" href="{{ path_for('comedor.menu') }}"> o Volver al Listado de Menus</a>

						{{ csrf.field | raw }}
					</form>
				</div>
			</div>
{% endblock %}
