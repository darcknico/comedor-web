{% extends 'templates/app.twig' %}

{% block content %}
<div class="col-lg-12">
	<h2>Nueva Cuenta</h2>
				<form action="{{ path_for('auth.signup')}}" method="post" autocomplete="off">
					<div class="form-group{{ errors.dni ? ' has-error' : ''}}">
						<label for="dni">Documento</label>
						<input type="text" name="dni" id="dni" placeholder="Numero de Documento" class="form-control" value="{{ old.dni }}">
						{% if errors.dni %}
							<span class="help-block">{{ errors.dni | first }}</span>
						{% endif %}
					</div>
					<div class="form-group{{ errors.nombre ? ' has-error' : ''}}">
						<label for="nombre">Nombre</label>
						<input type="text" name="nombre" id="nombre" class="form-control" value="{{ old.nombre }}">
						{% if errors.nombre %}
							<span class="help-block">{{ errors.nombre | first }}</span>
						{% endif %}
					</div>
					<div class="form-group{{ errors.contraseña ? ' has-error' : ''}}">
						<label for="contraseña">Contraseña</label>
						<input type="password" name="contraseña" id="contraseña" class="form-control" value="{{ old.contraseña }}">
						{% if errors.contraseña %}
							<span class="help-block">{{ errors.contraseña | first }}</span>
						{% endif %}
					</div>
					<button type="submit" class="btn btn-4 btn-block">Registrarse</button>

					{{ csrf.field | raw }}

					{% if errors.errorInfo %}
          <div class="form-group has-warning has-feedback">
            <label class="control-label" for="inputWarning">
            {{ errors.errorInfo[2] }}</label>
          </div>
          {% endif %}

				</form>
	</div>

{% endblock %}
