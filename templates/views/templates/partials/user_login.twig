<body class=" login">
       <!-- BEGIN LOGO -->
       <div class="logo">
           <a href="index.html">
               <img src="../assets/pages/img/logo-big.png" alt="" /> </a>
       </div>
       <!-- END LOGO -->
       <!-- BEGIN LOGIN -->
       <div class="content">
           <!-- BEGIN LOGIN FORM -->
           <form class="login-form" action="{{ path_for('auth.signin')}}" method="post" autocomplete="off">
               <h3 class="form-title font-green ">Acceder</h3>
               <div class="alert alert-danger display-hide">
                   <button class="close" data-close="alert"></button>
                   <span> Enter any username and password. </span>
               </div>
               <div class="form-group {{ errors.dni ? ' has-error' : ''}}">
                   <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                   <label class="control-label visible-ie8 visible-ie9">Documento</label>
                   <input id="dni" class="form-control form-control-solid placeholder-no-fix" type="number" autocomplete="off" placeholder="Documento" name="dni" />
                   {% if errors.dni %}
     								<span class="help-block">{{ errors.dni | first }}</span>
     							{% endif %}
               </div>
               <div class="form-group {{ errors.contraseña ? ' has-error' : ''}}">
                   <label class="control-label visible-ie8 visible-ie9">Contraseña</label>
                   <input id="contraseña" class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="Contraseña" name="contraseña" />
                   {% if errors.contraseña %}
     								<span class="help-block">{{ errors.contraseña | first }}</span>
     							{% endif %}
               </div>
               <div class="form-actions">
                   <button type="submit" class="btn green uppercase">Login</button>
                   <label class="rememberme check mt-checkbox mt-checkbox-outline">
                       <input type="checkbox" name="remember" value="1" />Recordar
                       <span></span>
                   </label>
                   <a href="javascript:;" id="forget-password" class="forget-password">Contraseña Perdida?</a>
               </div>
               <div class="create-account">
                   <p>
                       <a href="javascript:;" id="register-btn" class="uppercase">Crear una cuenta Nueva</a>
                   </p>
               </div>

               {{ csrf.field | raw }}
           </form>
           <!-- END LOGIN FORM -->
           <!-- BEGIN FORGOT PASSWORD FORM -->
           <form class="forget-form" action="index.html" method="post">
               <h3 class="font-green">Contraseña Perdida?</h3>
               <p> Ingrese su cuenta DNI y pongase en contacto con el Administrador. </p>
               <div class="form-group">
                   <input class="form-control placeholder-no-fix" type="number" autocomplete="off" placeholder="DNI" name="dni" /> </div>
               <div class="form-actions">
                   <button type="button" id="back-btn" class="btn green btn-outline">Volver</button>
                   <button type="submit" class="btn btn-success uppercase pull-right">Enviar</button>
               </div>
           </form>
           <!-- END FORGOT PASSWORD FORM -->
           <!-- BEGIN REGISTRATION FORM -->
           <form class="register-form" action="{{ path_for('auth.signup')}}" method="post">
               <h3 class="font-green">Nueva Cuenta</h3>
               <p class="hint"> Ingrese su informacion Personal: </p>
               <div class="form-group {{ errors.nombre ? ' has-error' : ''}}">
                 <label class="control-label visible-ie8 visible-ie9">Nombre</label>
                 <input name="nombre" id="nombre" class="form-control placeholder-no-fix" type="text" placeholder="Nombre" />
                 {% if errors.nombre %}
                 <span class="help-block">{{ errors.nombre | first }}</span>
  	             {% endif %}
               </div>
               <div class="form-group {{ errors.apellido ? ' has-error' : ''}}">
                 <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                 <label class="control-label visible-ie8 visible-ie9">Apellido</label>
                 <input name="apellido" id="apellido" class="form-control placeholder-no-fix" type="text" placeholder="Apellido" />
                 {% if errors.apellido %}
                 <span class="help-block">{{ errors.apellido | first }}</span>
                 {% endif %}
               </div>
               <div class="form-group {{ errors.direccion ? ' has-error' : ''}}">
                   <label class="control-label visible-ie8 visible-ie9">Direccion</label>
                   <input name="direccion" id="direccion" class="form-control placeholder-no-fix" type="text" placeholder="Direccion" />
                   {% if errors.direccion %}
                   <span class="help-block">{{ errors.direccion | first }}</span>
                   {% endif %}
               </div>
               <div class="form-group">
                   <label class="control-label visible-ie8 visible-ie9">Ciudad/Departamento</label>
                   <input class="form-control placeholder-no-fix" type="text" placeholder="Ciudad/Departamento" name="ciudad" /> </div>

               <p class="hint"> Ingrese detalles de la cuenta acontinuacion: </p>
               <div class="form-group {{ errors.dni ? ' has-error' : ''}}">
                   <label class="control-label visible-ie8 visible-ie9">Documento</label>
                   <input name="dni" id="dni" class="form-control placeholder-no-fix" type="number" autocomplete="off" placeholder="DNI" required/>
                   {% if errors.dni %}
                   <span class="help-block">{{ errors.dni | first }}</span>
                   {% endif %}
               </div>
               <div class="form-group {{ errors.contraseña ? ' has-error' : ''}}">
                   <label class="control-label visible-ie8 visible-ie9">Contraseña</label>
                   <input name="contraseña" id="contraseña" class="form-control placeholder-no-fix" type="password" autocomplete="off" id="register_password" placeholder="Contraseña" required/>
                   {% if errors.contraseña %}
                   <span class="help-block">{{ errors.contraseña | first }}</span>
                   {% endif %}
               </div>
               <div class="form-group">
                   <label class="control-label visible-ie8 visible-ie9">Vuelva a ingresar su Contraseña</label>
                   <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Vuelva a ingresar su Contraseña" name="rcontraseña" required/> </div>
               <div class="form-group margin-top-20 margin-bottom-20">
                   <label class="mt-checkbox mt-checkbox-outline">
                       <input type="checkbox" name="tnc" /> Estoy de acuerdo con las
                       <a href="javascript:;">Condiciones de Servicio </a> y
                       <a href="javascript:;">Politicas de Privacidad </a>
                       <span></span>
                   </label>
                   <div id="register_tnc_error"> </div>
               </div>
               <div class="form-actions">
                   <button type="button" id="register-back-btn" class="btn green btn-outline">Volver</button>
                   <button type="submit" id="register-submit-btn" class="btn btn-success uppercase pull-right">Enviar</button>
               </div>
           </form>
           <!-- END REGISTRATION FORM -->
       </div>
